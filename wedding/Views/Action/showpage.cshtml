@{
    ViewData["Title"] = "Home Page";
}
<p><a href="/logout">Log Out</a>  <a href="/Dashboard">Dashboard</a></p>
<h2>@ViewBag.CurrentWedding.WedderOne @ViewBag.CurrentWedding.WedderTwo</h2>
<h3>@ViewBag.CurrentWedding.Date </h3>
<h3>Guests</h3>
          <ul>
            @{
                    foreach (var x in @ViewBag.CurrentWedding.Invitations) {
                        <li>@x.User.FirstName & @x.User.LastName</li>
                    }
            }
          </ul>
                    
                        
                        @if(@ViewBag.sessionid == @ViewBag.querywed.UserId){
                            <form action="Delete/@ViewBag.querywed.WeddingId" method="GET">
                                <td><button type="submit">Delete</button></td>
                            </form>
                        }
                        else
                        {
                bool status = false;
                @foreach(var x in ViewBag.invite)
                {
                    @if(@ViewBag.Id == @x.UserId && @x.WeddingId == @ViewBag.wedid)
                   {
                    status = true;
                   }
                 }

                   if(status == true)
                   {
                       <form action="UnRSVP/@ViewBag.wedid" method="GET">
                           
                           <td><button type="submit">UNRSVP</button></td>
                        </form>
                        }
                   else
                   {
                       <form action="RSVP/@ViewBag.wedid" method="POST">
                           <td><button type="submit">RSVP</button></td>
                        </form>
                   }
            }
                    
                       

